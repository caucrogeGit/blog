<div class="mb-1 mx-auto my-4 leading-6">  
{% if tags %}
	{% for tag in tags %}
		<span class="text-xs inline-block mr-2 mb-2 py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-bold bg-gray-400 text-white">
			<a href="{{ path('tag.show', {'slug': tag.slug, 'returnTo': app.request.uri }) }}">{{ tag.name }}</a>
		</span>
	{% endfor %}
	<a class="inline-block relative top-3" href="{{ path('tag.show', {slug: post.slug}) }}">
		<svg class="h-8 w-8 text-gray-400 align-middle" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  
			<path stroke="none" d="M0 0h24v24H0z"/>  
			<rect x="4" y="4" width="16" height="16" rx="2" />  
			<line x1="9" y1="12" x2="15" y2="12" />  
			<line x1="12" y1="9" x2="12" y2="15" />
		</svg>
	</a>
{% endif %}
</div> 