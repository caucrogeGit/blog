{% extends 'base.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block body %}
    <div class="container mx-auto">
        <h1 class="text-5xl text-center mt-24 mb-8">Tags</h1>
        <div class="flex flex-row flex-wrap justify-evenly mt-8">
        {% for tag in tags %}
            <div class="card max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 my-8 mr-4" data-type="post">
                <div class="p-5">
                    <a href="{{ path('tag.show', {'slug': tag.slug}) }}">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ tag.name }}</h5>
                    </a>
                    <div>                                          
                        <span class="text-xs inline-block mr-2 mb-2 py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-bold bg-amber-700 text-white rounded-full">Pr√©sent dans {{ tag.posts|length }} article</span>
                    </div>    
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ tag.description|u.truncate(160, '...') }}</p>
                    <a href="{{ path('tag.show', {'slug': tag.slug}) }}" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Lire plus
                        <svg class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="navigation flex justify-center mb-8">
        {{ knp_pagination_render(tags) }}
    </div>
{% endblock %}
