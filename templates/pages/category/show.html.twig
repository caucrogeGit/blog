{% extends "base.html.twig" %}

{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<div class="container mx-auto">
		<div class="w-2/3 mx-auto mt-6">
			<a href="{{ path('category.index') }}" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
				Retourner au blog
			</a>
		</div>
		<h2 class="text-2xl text-center mt-8 mb-2">Catégorie</h2>
		<h1 class="text-5xl text-center mb-1 text-blue-700">{{ category.name|capitalize }}!</h1>
		<h2 class="text-2xl text-center mb-8">Publié le
			{{ category.createdAt|date('d/m/Y') }}</h2>
		<div class="w-2/3 mx-auto my-8 leading-6">
		<div>
			<span class="text-xs inline-block mr-2 mb-2 py-1 px-2.5 leading-none text-center whitespace-nowrap align-baseline font-bold bg-amber-700 text-white rounded-full">Présent dans {{ category.posts|length }} articles</span>
		</div>
			{{ category.description|raw }}
		</div>
    </div>
{% endblock %}


